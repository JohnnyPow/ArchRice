#--------------------ARROW-KEYS--------------------------------------------------------------------#
bindsym $mod+Left			focus left
bindsym $mod+Shift+Left			move left 100

bindsym $mod+Down			focus down
bindsym $mod+Shift+Down			move down 100

bindsym $mod+Up				focus up
bindsym $mod+Shift+Up			move up 100

bindsym $mod+Right			focus right
bindsym $mod+Shift+Right		move right 100

#--------------------MEDIA-KEYS--------------------------------------------------------------------#
bindsym XF86AudioMute			exec --no-startup-id amixer set Master toggle; exec pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume		exec --no-startup-id amixer -M set Master 10%- unmute; exec pkill -RTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume		exec --no-startup-id amixer -M set Master 10%+ unmute; exec pkill -RTMIN+10 i3blocks
bindsym XF86AudioPrev			exec --no-startup-id playerctl previous
bindcode 172				exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext			exec --no-startup-id playerctl next
bindsym XF86MonBrightnessDown		exec --no-startup-id xbacklight -dec 10
bindsym Shift+XF86MonBrightnessDown	exec --no-startup-id xbacklight -set 50
bindsym XF86MonBrightnessUp		exec --no-startup-id xbacklight -inc 10
bindsym Shift+XF86MonBrightnessUp	exec --no-startup-id xbacklight -set 100

