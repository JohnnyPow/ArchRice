#vim: filetype=i3
set $mod Mod4
set $terminal st

floating_modifier $mod

#screen identifiers
set $screen1 "eDP1"
set $screen2 "eDP1"

#workspace names
set $workspace1 "1"
set $workspace2 "2"
set $workspace3 "3"
set $workspace4 "4"
set $workspace5 "5"
set $workspace6 "6"
set $workspace7 "7"
set $workspace8 "8"
set $workspace9 "9"
set $workspace10 "10"

#bind workspaces to screens
workspace $workspace1 output $screen1
workspace $workspace2 output $screen1
workspace $workspace3 output $screen1
workspace $workspace4 output $screen1
workspace $workspace5 output $screen1
workspace $workspace6 output $screen2
workspace $workspace7 output $screen2
workspace $workspace8 output $screen2
workspace $workspace9 output $screen2
workspace $workspace10 output $screen2

#window colors
set $border-color        #000000
set $bg-color 	         #285577
set $inactive-bg-color   #2F343F
set $urgent-bg-color     #E53935
set $text-color          #000000
set $indicator-color 	 #2E9EF4

#                        border        background         text        indicator
client.focused          $border-color $bg-color          $text-color $indicator-color
client.unfocused        $border-color $inactive-bg-color $text-color $inactive-bg-color
client.focused_inactive $border-color $inactive-bg-color $text-color $inactive-bg-color
client.urgent           $border-color $urgent-bg-color   $text-color $urgent-bg-color

#gaps
gaps outer 0
gaps inner 0

#floating windows
for_window [class="^.*"] border pixel 4

for_window [class="Enpass-Desktop"] floating enable
for_window [class="Impactor"] floating enable
for_window [class="Alsa-tray"] floating enable
for_window [class="Mainwindow.py"] floating enable

#--------------------------------------------------------------------------------------------------#
#--------------------AUTOSTART---------------------------------------------------------------------#
#--------------------------------------------------------------------------------------------------#
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id xfce4-power-manager
exec --no-startup-id compton
exec --no-startup-id enpass startWithTray
exec --no-startup-id unclutter --timeout 2
exec --no-startup-id devmon
exec --no-startup-id twmnd

exec --no-startup-id nm-applet
exec --no-startup-id libinput-gestures-setup start

exec_always --no-startup-id ~/.config/polybar/launch.sh

#--------------------------------------------------------------------------------------------------#
#--------------------MODES-------------------------------------------------------------------------#
#--------------------------------------------------------------------------------------------------#
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Shift+Left resize shrink width 1 px or 1 ppt
        bindsym Shift+Down resize grow height 1 px or 1 ppt
        bindsym Shift+Up resize shrink height 1 px or 1 ppt
        bindsym Shift+Right resize grow width 1 px or 1 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

set $mode_system (E)xit, (R)eboot, (S)hutdown, (L)ock
mode "$mode_system" {
	bindsym r exec reboot, mode "default"
	bindsym s exec shutdown -h now, mode "default"
	bindsym e exit, mode "default"
	bindsym l exec i3lock -c 181818 --radius 180 --verifsize 56 --wrongsize 56 --ring-width 12, mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

