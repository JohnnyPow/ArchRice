#vim: filetype=i3
set $mod Mod4
set $terminal st

font pango:Noto Sans 10

floating_modifier $mod

#screen identifiers
set $screen1 "HDMI-0"
set $screen2 "HDMI-1"

#workspace names
set $workspace1 "1"
set $workspace2 "2"
set $workspace3 "3"
set $workspace4 "4"
set $workspace5 "5"
set $workspace6 "6"
set $workspace7 "7"
set $workspace8 "8"
set $workspace9 "9"
set $workspace10 "10"

#bind workspaces to screens
workspace $workspace1 output $screen1
workspace $workspace2 output $screen1
workspace $workspace3 output $screen1
workspace $workspace4 output $screen1
workspace $workspace5 output $screen1
workspace $workspace6 output $screen2
workspace $workspace7 output $screen2
workspace $workspace8 output $screen2
workspace $workspace9 output $screen2
workspace $workspace10 output $screen2

set $bg-color 	         #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# window colors
#                       border              background         text                 indicator
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00
# gaps
gaps outer 5
gaps inner 15

# floating windows
for_window [class="Enpass-Desktop"] floating enable
for_window [class="Impactor"] floating enable
for_window [class="Alsa-tray"] floating enable
for_window [class="Mainwindow.py"] floating enable

for_window [class="^.*"] border pixel 4

#--------------------------------------------------------------------------------------------------#
#--------------------AUTOSTART---------------------------------------------------------------------#
#--------------------------------------------------------------------------------------------------#
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id nm-applet
exec --no-startup-id pamac-tray
exec --no-startup-id xfce4-power-manager
exec --no-startup-id compton -cCFb --backend glx --vsync opengl
exec --no-startup-id setxkbmap eu -option caps:escape
exec --no-startup-id Scripts/enpass.sh
exec --no-startup-id unclutter --timeout 3
exec --no-startup-id xset r rate 300 60 

exec_always --no-startup-id ~/.config/polybar/launch.sh
#exec_always --no-startup-id ~/Scripts/panel.sh

#--------------------------------------------------------------------------------------------------#
#--------------------MODES-------------------------------------------------------------------------#
#--------------------------------------------------------------------------------------------------#
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Shift+j resize shrink width 1 px or 1 ppt
        bindsym Shift+k resize grow height 1 px or 1 ppt
        bindsym Shift+l resize shrink height 1 px or 1 ppt
        bindsym Shift+semicolon resize grow width 1 px or 1 ppt

        bindsym Shift+Left resize shrink width 1 px or 1 ppt
        bindsym Shift+Down resize grow height 1 px or 1 ppt
        bindsym Shift+Up resize shrink height 1 px or 1 ppt
        bindsym Shift+Right resize grow width 1 px or 1 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

set $mode_apps (W)aterfox, (S)potify
mode "$mode_apps" {
	bindsym w exec GTK_THEME=Adwaita:light waterfox, mode "default"
	bindsym Shift+w exec GTK_THEME=Adwaita:light waterfox -private-window, mode "default"
	bindsym s exec spotify --force-device-scale-factor=2, mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

set $mode_system (W)aterfox, (S)potify
mode "$mode_system" {
	bindsym r exec reboot, mode "default"
	bindsym Shift+w exec GTK_THEME=Adwaita:light waterfox -private-window, mode "default"
	bindsym s exec spotify --force-device-scale-factor=2, mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

