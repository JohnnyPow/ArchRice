#--------------------ARROW KEYS--------------------------------------------------------------------#
bindsym $mod+Left			focus left
bindsym $mod+Shift+Left			move left 100
bindsym $mod+j				focus left
bindsym $mod+Shift+j			move left 100

bindsym $mod+Down			focus down
bindsym $mod+Shift+Down			move down 100
bindsym $mod+k				focus down
bindsym $mod+Shift+k			move down 100

bindsym $mod+Up				focus up
bindsym $mod+Shift+Up			move up 100
bindsym $mod+l				focus up
bindsym $mod+Shift+l			move up 100

bindsym $mod+Right			focus right
bindsym $mod+Shift+Right		move right 100
bindsym $mod+semicolon			focus right
bindsym $mod+Shift+semicolon		move right 100

#--------------------MEDIA KEYS--------------------------------------------------------------------#
bindsym XF86AudioMute			exec --no-startup-id amixer -q set Master toggle
bindsym XF86AudioLowerVolume		exec --no-startup-id amixer -q set Master 10%- unmute
bindsym XF86AudioRaiseVolume		exec --no-startup-id amixer -q set Master 10%+ unmute
bindsym XF86AudioPrev			exec --no-startup-id playerctl previous
bindcode 172				exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext			exec --no-startup-id playerctl next
bindsym XF86MonBrightnessDown		exec --no-startup-id xbacklight -dec 10
bindsym XF86MonBrightnessUp		exec --no-startup-id xbacklight -inc 10

