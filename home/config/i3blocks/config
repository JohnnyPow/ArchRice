command=/usr/lib/i3blocks/$BLOCK_NAME
separator=false
separator_block_width=15
markup=none

[mpd]
command=$HOME/.config/i3blocks/mpd
align=center
min_width=1920
interval=5

[volume]
command=$HOME/.config/i3blocks/volume
interval=once
signal=10

[df root]
command=echo "/:$(df /root | tail -n 1 | awk '{ print $5 }')"
interval=60

[df home]
command=echo "~:$(df /home | tail -n 1 | awk '{ print $5 }')"
interval=60

[wifi]
instance=wlp2s0
command=$HOME/.config/i3blocks/wifi
interval=10

[battery state]
command=acpi | cut -d ' ' -f 3 | sed s/Full,/ï‚„./
interval=5

[battery]
command=acpi | cut -d ' ' -f 4
interval=5

[keyboard]
command=setxkbmap -query | grep layout | awk '{ print $2 }'
interval=60

[time]
command=date '+%Y-%m-%d %I:%M %p'
interval=5
